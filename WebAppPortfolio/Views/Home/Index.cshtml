@{
    ViewBag.Title = "Home";
}

<meta name="description" content="Personal development projects, contact information, resume, and other info." />

<!-- Scripts for Navigation Bar -->
<script src="~/Scripts/Home.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

<!-- Navigation Bar -->
<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle btn" data-toggle="collapse" data-target=".navbar-main-collapse">
                Menu <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand page-scroll" href="#page-top">
                Aldrin Abastillas
            </a>
        </div>
        <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
            <ul class="nav navbar-nav">
                <!-- Hidden class to remove active class from link when scrolled up past section -->
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                <li>
                    <a class="page-scroll" href="#projects">Projects</a>
                </li>
                <li>
                    <a class="page-scroll" href="#contact">Contact</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Intro Header -->
<header class="intro parallax">
    <div class="container intro-header">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <h1 class="brand-heading">Aldrin Abastillas</h1>
                <p class="intro-text">
                    Prospective Software Engineer
                </p>
                <a href="#projects" class="btn btn-circle page-scroll">
                    <span class="glyphicon glyphicon-menu-down animated" aria-hidden="true"></span>
                </a>
            </div>
        </div>
    </div>
</header>

<!-- Projects Section -->
<section id="projects" class="container projects-section text-center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <h2>Projects</h2>
            <h3>Billboard Hot 100 Predictor</h3>
            <div class="projectThumb" id="billboardImage">
                <div class="overlay">
                    <a href="~/Spotify/Index">
                        <i class="fa fa-play-circle fa-4x" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <br />
            <p>
                Predict if a song would be on the Billboard Hot 100 chart! <br />
                Built with ASP.NET MVC, Microsoft Azure Machine Learning Studio, and Spotify Web APIs.
            </p>
            <br /><br />

            <h3>Lorenz System Audio Visualizer</h3>
            <div class="projectThumb" id="visualizerGif">
                <div class="overlay">
                    <a href="" type="button" data-toggle="modal" data-target="#myModal">
                        <i class="fa fa-play-circle fa-4x" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <br />
            <p>
                An audio visualizer based on the Lorenz System of equations. <br />
                Built in Unity3D.
            </p>
            <br />

            <!-- Visualizer Modal -->
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        @Html.Partial("_Visualizer")
                    </div>
                </div>
            </div>

            <h2>Past Projects</h2>
            <p>
                For the code to the projects above, as well as older ones, see
                <a href="https://github.com/aldrinabastillas" target="_blank">
                    Github <i class="fa fa-github" aria-hidden="true"></i> &nbsp;!
                </a>
            </p>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="container contact-section text-center parallax">
    <div class="col-lg-8 col-lg-offset-2">
        <h2>Contact</h2>
        <p>
            <a href="mailto:aldrin.abastillas@gmail.com">aldrin.abastillas@gmail.com</a>
        </p>
        <ul class="list-inline">
            <li>
                <a href="https://github.com/aldrinabastillas" target="_blank" data-toggle="tooltip" data-placement="bottom" title="Github Repos"><i class="fa fa-github fa-3x" aria-hidden="true"></i></a>
            </li>
            <li>
                <a href="https://www.linkedin.com/in/aldrinabastillas" target="_blank" data-toggle="tooltip" data-placement="bottom" title="Linkedin Profile"><i class="fa fa-linkedin-square fa-3x" aria-hidden="true"></i></a>
            </li>
            <li>
                <a href="~/Home/Resume" data-toggle="tooltip" data-placement="bottom" title="Download Resume"><i class="fa fa-file-text fa-3x" aria-hidden="true"></i></a>
            </li>
        </ul>
    </div>
</section>

<!-- Images -->
<section id="images">
    <h6>Images</h6>
    <p>
        Exit Glacier, taken from the end of the <a href="https://www.nps.gov/kefj/planyourvisit/harding_icefield_trail.htm" target="_blank">Harding Icefield Trail</a> on 7/2015 .
        <br />
        Skyline of Madison, WI, taken from the center of <a href="https://www.mononaterrace.com/" target="_blank">Lake Monona</a> on 6/2015.
    </p>
</section>