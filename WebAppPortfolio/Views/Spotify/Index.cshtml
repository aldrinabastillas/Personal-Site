@{
    Layout = null;
    ViewBag.Title = "Billboard Top 100 Predictor";
    @Scripts.Render("~/bundles/angular")
}

<!DOCTYPE html>
<html ng-app="spotifyApp">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Billboard Top 100 Predictor</title>
    <link href="/Content/semantic.css" rel="stylesheet" type="text/css">
    <script src="/Scripts/semantic.min.js" type="text/javascript"></script>
    <script src="/Scripts/Spotify/Spotify.js" type="text/javascript"></script>
</head>
<body>
    <div class="container-fluid">
        <div ng-controller="SpotifyController as spotify">
            <br />
            <br />
            <br />
            <!--Row 1-->
            <div class="row">
                <!--Col 1-->
                <div class="col-md-4 col-lg-4">
                    <iframe src="https://embed.spotify.com/?uri=spotify:user:billboard.com:playlist:6UeSakyzhiEt4NB3UAd6NQ"
                            id="spotifyPlayer" width="250" height="330" frameborder="0" allowtransparency="true"></iframe>
                </div>

                <!--Col 2-->
                <div class="col-md-4 col-lg-4">


                    <form ng-submit="spotify.IdSearch(searchTerm)">
                        <div id="songSearch" class="ui search">
                            <div class="ui icon input">
                                <input class="prompt" type="text"
                                       placeholder="Search for a song!" ng-model="searchTerm">
                                <i class="search icon"></i>
                            </div>
                            <div class="results"></div>
                        </div>
                    </form>
                    <br />
                    <div id="predictionText">
                        <h3>
                            {{selectedSong}} by {{selectedArtist}} is <br />
                            {{probability}} {{prediction}} <br/>
                            to be a Billboard Top 100 Song.
                        </h3>
                    </div>

                </div>

                <!--Col 3-->
                <div class="col-md-4 col-lg-4" id="billboardLists">
                    <table>
                        <thead>
                            <tr>
                                <th>Position</th>
                                <th>Song</th>
                                <th>Artist</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Uptown Funk!</td>
                                <td>Mark Ronson feat. Bruno Mars </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Thinking Out Loud</td>
                                <td>Ed Sheeran</td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>See You Again</td>
                                <td>Wiz Khalifa ft. Charlie Puth</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
