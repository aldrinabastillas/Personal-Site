@{
    Layout = null;
    ViewBag.Title = "Billboard Top 100 Predictor";   
}

<!DOCTYPE html>
<html ng-app="spotifyApp">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Billboard Top 100 Predictor</title>
    <script src="/Scripts/semantic.js" type="text/javascript"></script>
    <link href="/Content/semantic.css" rel="stylesheet" type="text/css">
    <script src="/Scripts/Spotify/Spotify.js" type="text/javascript"></script>
</head>
<body>
    <div class="container-fluid">
        <div ng-controller="SpotifyController as spotify">
            <br />
            <br />
            <br />
            <!--Row 1-->
            <div class="row">
                <!--Col 1-->
                <div class="col-md-4 col-lg-4">
                    <iframe src="https://embed.spotify.com/?uri=spotify:user:billboard.com:playlist:6UeSakyzhiEt4NB3UAd6NQ"
                            id="spotifyPlayer" width="250" height="330" frameborder="0" allowtransparency="true"></iframe>
                </div>

                <!--Col 2-->
                <div class="col-md-4 col-lg-4">


                    <form>
                        <div id="songSearch" class="ui search">
                            <div class="ui icon input">
                                <input class="prompt" type="text"
                                       placeholder="Search for a song!" ng-model="searchTerm">
                                <i class="search icon"></i>
                            </div>
                            <div class="results"></div>
                        </div>
                    </form>
                    <br />
                    <div id="predictionText">
                        <h3>
                            {{selectedSong}} by {{selectedArtist}} is <br />
                            {{probability}} {{prediction}} <br />
                            to be a Billboard Top 100 Song.
                        </h3>
                    </div>

                </div>

                <!--Col 3-->
                <div class="col-md-4 col-lg-4" id="billboardLists">

                    
                    <select name="singleSelect" id="yearDropdown" 
                            ng-model="spotify.selectedYear" ng-change="spotify.getYearList(spotify.selectedYear)"
                            ng-options="year for year in spotify.availableYears">
                        @*<option ng-repeat="year in availableYears" value="{{year}}">
                            {{year}}
                        </option>*@
                    </select>
                  
                    <table id="billboardTable" class="table table-condensed table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Position</th>
                                <th>Song</th>
                                <th>Artist</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="song in spotify.billboardSongs">
                                <td>{{song.Position}}</td>
                                <td>{{song.Song}}</td>
                                <td>{{song.Artist}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <br />

            <!--Row 2-->
            <div class="row">
                <div class="col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4">
                    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="headingOne">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                        Training Data <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                                <div class="panel-body">
